  window.openPhotoGallery = function openPhotoGallery(galleryId) {
    const gallery = photoGalleries[galleryId];
    if (!gallery) return;

    // Set modal content
    const modalTitle = document.getElementById('modalTitle');
    const modalSubtitle = document.getElementById('modalSubtitle');
    const modalDescription = document.getElementById('modalDescription');
    if (modalTitle) modalTitle.textContent = gallery.title;
    if (modalSubtitle) modalSubtitle.textContent = gallery.subtitle;
    if (modalDescription) modalDescription.innerHTML = `<p class="text-gray-700 leading-relaxed">${gallery.description}</p>`;

    // Generate photo grid
    const photoGrid = document.getElementById('photoGrid');
    if (!photoGrid) return;
    photoGrid.innerHTML = gallery.photos.map((photo, index) => `
      <div class="photo-item bg-white rounded-lg shadow-lg overflow-hidden cursor-pointer" data-index="${index}">
        <div class="aspect-w-4 aspect-h-3">
          <div class="w-full h-48 bg-gradient-to-br ${photo.gradient} flex items-center justify-center">
            <div class="text-center">
              <div class="text-4xl mb-3">${photo.emoji}</div>
              <p class="text-sm font-medium text-gray-700 px-2">${photo.title}</p>
            </div>
          </div>
        </div>
        <div class="p-4">
          <p class="text-sm text-gray-600 leading-relaxed">${photo.description}</p>
        </div>
      </div>
    `).join('');

    // Attach click listeners to avoid inline onclick issues with quotes
    Array.from(photoGrid.querySelectorAll('.photo-item')).forEach(item => {
      const index = parseInt(item.getAttribute('data-index') || '0', 10);
      const photo = gallery.photos[index];
      item.addEventListener('click', () => {
        window.viewPhotoDetail(photo.title, photo.description);
      });
    });

    // Show modal
    const modal = document.getElementById('photoGalleryModal');
    if (!modal) return;
    modal.classList.remove('hidden');
    const modalPanel = modal.querySelector('.bg-white');
    if (modalPanel) modalPanel.classList.add('modal-enter');
    if (document && document.body) {
      document.body.style.overflow = 'hidden';
    }
  }

  window.closePhotoGallery = function closePhotoGallery() {
    const modal = document.getElementById('photoGalleryModal');
    if (modal) modal.classList.add('hidden');
    if (document && document.body) {
      document.body.style.overflow = 'auto';
    }
  }

  window.viewPhotoDetail = function viewPhotoDetail(title, description) {
    alert(`${title}\n\n${description}\n\n[In a real implementation, this would open a larger photo viewer with comments and sharing options]`);
  }

  // Close modal when clicking outside
  document.getElementById('photoGalleryModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
      window.closePhotoGallery();
    }
  });

  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      window.closePhotoGallery();
    }
  });
</script>