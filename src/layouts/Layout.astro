        </div>
      </div>
      <!-- Mobile menu -->
      <div class="mobile-menu hidden md:hidden">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-b border-gray-200">
          <a href="/" class="hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Home</a>
          <a href="/about" class="hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">About</a>
          <a href="/research" class="hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Research</a>
          <a href="/projects" class="hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Projects</a>
          <a href="/achievements" class="hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Achievements</a>
